@model Online_Shop.ViewModels.ViewModelFood

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit profile</h1>
<hr class="accent my-5">

<form asp-controller="Home" asp-action="EditProfile" method="post">
    <input type="hidden" asp-for="RegisterUser.Username" value="@Model.RegisterUser.Username" />
    <div class="form-group">
        <label asp-for="RegisterUser.Name">Name</label>
        <input type="text" asp-for="RegisterUser.Name" class="form-control" id="inputName4" placeholder="Full name">
        <span asp-validation-for="RegisterUser.Name" style="color: red;"></span>
    </div>
    <div class="form-group">
        <label asp-for="RegisterUser.Email">Email</label>
        <input type="email" asp-for="RegisterUser.Email" class="form-control" id="inputEmail4" placeholder="Email">
        <span asp-validation-for="RegisterUser.Email" style="color: red;"></span>
    </div>
    <div class="form-group">
        <label asp-for="RegisterUser.Phone">Phone</label>
        <input type="tel" asp-for="RegisterUser.Phone" class="form-control" id="inputPhone4" placeholder="Phone">
        <span asp-validation-for="RegisterUser.Phone" style="color: red;"></span>
    </div>
    <div class="form-group">
        <label asp-for="RegisterUser.Address">Address</label>
        <input type="text" asp-for="RegisterUser.Address" class="form-control" id="inputAddress" placeholder="1234 Main St">
        <span asp-validation-for="RegisterUser.Address" style="color: red;"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="RegisterUser.City">City</label>
            <input type="text" asp-for="RegisterUser.City" class="form-control" id="inputCity" placeholder="City">
            <span asp-validation-for="RegisterUser.City" style="color: red;"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="RegisterUser.PostalCode">Postal code</label>
            <input type="text" id="inputPostalCode" asp-for="RegisterUser.PostalCode" class="form-control">
            <span asp-validation-for="RegisterUser.PostalCode" style="color: red;"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a asp-controller="Home" asp-action="ViewProfile"><i class="fas fa-chevron-circle-left"></i> Profile</a>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.12.4.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>