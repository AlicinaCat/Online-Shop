
@model Online_Shop.Models.RegisterUser

<h1>Sign up</h1>

<form asp-controller="Account" asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" id="inputName4" placeholder="Full name">
        <span asp-validation-for="Name" style="color: red;"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Username">Username</label>
            <input type="text" asp-for="Username" class="form-control" id="inputUsername" placeholder="Username">
            <span asp-validation-for="Username" style="color: red;"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Password">Password</label>
            <input type="password" asp-for="Password" class="form-control" id="inputPassword4" placeholder="Password">
            <span asp-validation-for="Password" style="color: red;"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="email" asp-for="Email" class="form-control" id="inputEmail4" placeholder="Email">
        <span asp-validation-for="Email" style="color: red;"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input type="tel" asp-for="Phone" class="form-control" id="inputPhone4" placeholder="Phone">
        <span asp-validation-for="Phone" style="color: red;"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input type="text" asp-for="Address" class="form-control" id="inputAddress" placeholder="1234 Main St">
        <span asp-validation-for="Address" style="color: red;"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="City">City</label>
            <input type="text" asp-for="City" class="form-control" id="inputCity" placeholder="City">
            <span asp-validation-for="City" style="color: red;"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="PostalCode">Postal code</label>
            <input type="text" id="inputPostalCode" asp-for="PostalCode" class="form-control">
            <span asp-validation-for="PostalCode" style="color: red;"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Sign up</button>
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.12.4.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
